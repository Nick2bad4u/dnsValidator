{
  "name": "dns-validator",
  "version": "1.0.0",
  "description": "A TypeScript library for validating DNS query results",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "prepublishOnly": "npm run typecheck && npm run lint && npm run build && npm run test",
    "clean": "rimraf dist"
  },
  "keywords": [
    "dns",
    "validation",
    "typescript",
    "dns-records",
    "a-record",
    "aaaa-record",
    "mx-record",
    "txt-record",
    "cname-record"
  ],
  "author": "Nick",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nick2bad4u/dnsValidator.git"
  },
  "bugs": {
    "url": "https://github.com/nick2bad4u/dnsValidator/issues"
  },
  "homepage": "https://github.com/nick2bad4u/dnsValidator#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@types/validator": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "validator": "^13.11.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
