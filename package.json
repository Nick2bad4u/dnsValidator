{
  "name": "dns-response-validator",
  "version": "1.2.0",
  "description": "A production-ready TypeScript library for validating DNS query results and individual DNS records",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "dns-response-validator": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/esm/index.js"
    },
    "./validators": {
      "types": "./dist/validators.d.ts",
      "require": "./dist/validators.js",
      "import": "./dist/esm/validators.js"
    },
    "./dnssec": {
      "types": "./dist/dnssec.d.ts",
      "require": "./dist/dnssec.js",
      "import": "./dist/esm/dnssec.js"
    },
    "./dnssec-validators": {
      "types": "./dist/dnssec-validators.d.ts",
      "require": "./dist/dnssec-validators.js",
      "import": "./dist/esm/dnssec-validators.js"
    },
    "./enhanced-validators": {
      "types": "./dist/enhanced-validators.d.ts",
      "require": "./dist/enhanced-validators.js",
      "import": "./dist/esm/enhanced-validators.js"
    },
    "./errors": {
      "types": "./dist/errors.d.ts",
      "require": "./dist/errors.js",
      "import": "./dist/esm/errors.js"
    },
    "./performance": {
      "types": "./dist/performance.d.ts",
      "require": "./dist/performance.js",
      "import": "./dist/esm/performance.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "require": "./dist/utils.js",
      "import": "./dist/esm/utils.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.json && tsc -p tsconfig.esm.json",
    "build:watch": "tsc --watch",
    "build:esm": "tsc --module ES2020 --outDir dist/esm",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit && tsc --project tsconfig.test.json --noEmit",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{json,md}\"",
    "docs": "rimraf docs && typedoc",
    "prepublishOnly": "npm run typecheck && npm run build",
    "clean": "rimraf dist coverage",
    "dev": "npm run build:watch",
    "size": "size-limit",
    "validate": "npm run typecheck && npm run lint && npm run test",
    "postbuild": "echo postbuild noop"
  },
  "keywords": [
    "dns",
    "validation",
    "typescript",
    "dns-records",
    "a-record",
    "aaaa-record",
    "mx-record",
    "txt-record",
    "cname-record",
    "soa-record",
    "srv-record",
    "caa-record",
    "tlsa-record",
    "naptr-record",
    "ptr-record",
    "ns-record",
    "network",
    "domain",
    "resolver",
    "security"
  ],
  "author": "Nick",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nick2bad4u/dnsValidator.git"
  },
  "bugs": {
    "url": "https://github.com/nick2bad4u/dnsValidator/issues"
  },
  "homepage": "https://github.com/nick2bad4u/dnsValidator#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "sideEffects": [
    "dist/cli.js"
  ],
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "50 KB"
    },
    {
      "path": "dist/validators.js",
      "limit": "40 KB"
    },
    {
      "path": "dist/dnssec.js",
      "limit": "30 KB"
    },
    {
      "path": "dist/enhanced-validators.js",
      "limit": "36 KB"
    },
    {
      "path": "dist/performance.js",
      "limit": "15 KB"
    }
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/validator": "^13.15.2",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "audit-ci": "^7.1.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.1",
    "license-checker": "^25.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "size-limit": "^11.2.0",
    "ts-jest": "^29.4.1",
    "typedoc": "^0.28.11",
    "typedoc-plugin-markdown": "^4.2.0",
    "typescript": "^5.9.2",
    "@size-limit/preset-small-lib": "^11.2.0"
  },
  "dependencies": {
    "chalk": "^5.6.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "validator": "^13.15.15"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
