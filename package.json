{
  "name": "dns-response-validator",
  "version": "1.1.0",
  "description": "A production-ready TypeScript library for validating DNS query results and individual DNS records",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "dns-response-validator": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "build:esm": "tsc --module ES2020 --outDir dist/esm",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{json,md}\"",
    "docs": "typedoc",
    "prepublishOnly": "npm run typecheck && npm run lint && npm run format:check && npm run build && npm run test:ci",
    "clean": "rimraf dist coverage",
    "dev": "npm run build:watch",
    "size": "size-limit",
    "validate": "npm run typecheck && npm run lint && npm run test"
  },
  "keywords": [
    "dns",
    "validation",
    "typescript",
    "dns-records",
    "a-record",
    "aaaa-record",
    "mx-record",
    "txt-record",
    "cname-record",
    "soa-record",
    "srv-record",
    "caa-record",
    "tlsa-record",
    "naptr-record",
    "ptr-record",
    "ns-record",
    "network",
    "domain",
    "resolver",
    "security"
  ],
  "author": "Nick",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nick2bad4u/dnsValidator.git"
  },
  "bugs": {
    "url": "https://github.com/nick2bad4u/dnsValidator/issues"
  },
  "homepage": "https://github.com/nick2bad4u/dnsValidator#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "50 KB"
    }
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.6.0",
    "@types/validator": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "audit-ci": "^6.6.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^30.1.1",
    "license-checker": "^25.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "size-limit": "^9.0.0",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "chalk": "^5.6.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "validator": "^13.11.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
